{
    "openapi": "3.0.2",
    "info": {
        "title": "Komentar API",
        "description": "Komentar API",
        "version": "1.0"
    },
    "components": {
        "schemas": {
            "Comment": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "id_berita": {
                        "type": "integer",
                        "example": 1
                    },
                    "id_user": {
                        "type": "integer",
                        "example": 3
                    },
                    "tanggal": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2024-07-22T00:00:00.000000Z"
                    },
                    "isi_komentar": {
                        "type": "string",
                        "example": "This is a comment"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2024-07-23T05:24:50.000000Z"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2024-07-23T05:24:50.000000Z"
                    }
                }
            },
            "User": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 3
                    },
                    "name": {
                        "type": "string",
                        "example": "John Doe"
                    },
                    "email": {
                        "type": "string",
                        "example": "john.doe@example.com"
                    }
                }
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    },
    "security": [
        {
            "bearerAuth": []
        }
    ],
    "servers": [{ "url": "http://localhost:8000" }],
    "paths": {
        "/api/v1/berita/{slug}/komentar": {
            "post": {
                "summary": "Add a comment to a news item",
                "description": "Endpoint untuk menambahkan komentar pada berita berdasarkan slug",
                "parameters": [
                    {
                        "name": "slug",
                        "in": "path",
                        "required": true,
                        "description": "Slug dari berita",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "isi_komentar": {
                                        "type": "string",
                                        "description": "Isi komentar",
                                        "example": "This is a comment"
                                    }
                                },
                                "required": ["isi_komentar"]
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Comment added successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "comment": {
                                            "$ref": "#/components/schemas/Comment"
                                        },
                                        "user": {
                                            "$ref": "#/components/schemas/User"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Validation error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Validation error"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "News not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Not Found"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "get": {
                "description": "Get komentar by id_berita",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header"
                    },
                    {
                        "name": "id_berita",
                        "in": "path"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success mendapatkan komentar",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "object",
                                            "properties": {
                                                "id": {
                                                    "type": "number"
                                                },
                                                "id_berita": {
                                                    "type": "string"
                                                },
                                                "id_user": {
                                                    "type": "string"
                                                },
                                                "tanggal": {
                                                    "type": "string"
                                                },
                                                "created_at": {
                                                    "type": "string"
                                                },
                                                "updated_at": {
                                                    "type": "string"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/berita/{slug}/komentar/{id_komentar}": {
            "put": {
                "description": "Update Komentar",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header"
                    },
                    {
                        "name": "id_berita",
                        "in": "path"
                    },
                    {
                        "name": "id_komentar",
                        "in": "path"
                    }
                ],
                "requestBody": {
                    "description": "Update Komentar",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "id_berita": {
                                        "type": "string"
                                    },
                                    "id_user": {
                                        "type": "string"
                                    },
                                    "isi_komentar": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success Update Komentar",
                        "content": {
                            "application/json": {
                                
                            }
                        }
                    },
                    "400": {
                        "description": "Gagal update komentar",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "validationerror": {
                                        "description": "Validation Error",
                                        "value": {
                                            "errors": {
                                                "id_berita": [
                                                    "id_berita is required"
                                                ],
                                                "id_user": [
                                                    "id_user is required"
                                                ],
                                                "isi_komentar": [
                                                    "isi_komentar is required"
                                                ]
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "description": "Delete Komentar",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header"
                    },
                    {
                        "name": "id_berita",
                        "in": "path"
                    },
                    {
                        "name": "id_komentar",
                        "in": "path"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success delete komentar",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "boolean"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
