{
  "openapi": "3.0.2",
  "info": {
    "title": "API Berita",
    "description": "Dokumentasi API untuk endpoint berita",
    "version": "1.0.0"
  },
  "paths": {
    "/api/v1/berita/{slug}": {
      "get": {
        "summary": "Dapatkan Berita Berdasarkan Slug",
        "description": "Endpoint untuk mendapatkan berita berdasarkan slug",
        "parameters": [
          {
            "name": "slug",
            "in": "path",
            "required": true,
            "description": "Slug dari berita yang dicari",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Berhasil mendapatkan data berita",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "integer"
                        },
                        "id_user": {
                          "type": "integer"
                        },
                        "tanggal": {
                          "type": "string",
                          "format": "date-time"
                        },
                        "slug": {
                          "type": "string"
                        },
                        "judul": {
                          "type": "string"
                        },
                        "gambar": {
                          "type": "string"
                        },
                        "isi_berita": {
                          "type": "string"
                        },
                        "kategori": {
                          "type": "string"
                        },
                        "created_at": {
                          "type": "string",
                          "format": "date-time"
                        },
                        "updated_at": {
                          "type": "string",
                          "format": "date-time"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Berita tidak ditemukan",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Not Found"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
