{
    "openapi": "3.0.2",
    "info": {
        "title": "User API",
        "description": "User API",
        "version": "1.0"
    },
    "components": {
        "schemas": {
            "Gallery": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "name": {
                        "type": "string"
                    },
                    "gambar": {
                        "type": "string"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                }
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    },
    "security": [
        {
            "bearerAuth": []
        }
    ],
    "servers": [{ "url": "http://localhost:8000" }],
    "paths": {
        "/api/v1/gallery": {
            "get": {
                "summary": "Get gallery image by ID",
                "description": "Endpoint untuk mengambil gambar galeri berdasarkan ID",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "ID dari gambar galeri yang akan diambil",
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Data gallery berhasil diambil",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "gallery": {
                                            "$ref": "#/components/schemas/Gallery"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Data gallery tidak ditemukan",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Data tidak ditemukan"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Upload a new gallery image",
                "description": "Endpoint untuk mengunggah gambar baru ke galeri",
                "requestBody": {
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "image": {
                                        "type": "string",
                                        "format": "binary",
                                        "description": "Gambar yang akan diunggah"
                                    },
                                    "title": {
                                        "type": "string",
                                        "description": "Judul dari gambar"
                                    }
                                },
                                "required": ["image", "title"]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Gambar berhasil ditambahkan",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "gallery": {
                                            "$ref": "#/components/schemas/Gallery"
                                        },
                                        "status": {
                                            "type": "string",
                                            "example": "Berhasil ditambahkan"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Request tidak valid",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Validation error"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/gallery/{id}": {
            "get": {
                "summary": "Get a gallery image by id",
                "description": "Endpoint untuk mengambil gallery berdasarkan id",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "ID dari gambar galeri yang akan diambil",
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Data gallery berhasil didapat",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "type": "boolean",
                                            "example": true
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Data gallery tidak ditemukan",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "string",
                                            "example": "Data tidak ditemukan"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Update an existing gallery image",
                "description": "Endpoint untuk mengubah gambar galeri yang sudah ada",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "ID dari gambar galeri yang akan diubah",
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "image": {
                                        "type": "string",
                                        "format": "binary",
                                        "description": "Gambar yang akan diunggah"
                                    },
                                    "title": {
                                        "type": "string",
                                        "description": "Judul dari gambar"
                                    }
                                },
                                "required": ["image", "title"]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Data gallery berhasil diubah",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "$ref": "#/components/schemas/Gallery"
                                        },
                                        "status": {
                                            "type": "string",
                                            "example": "Data gallery berhasil diubah"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Request tidak valid",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Validation error"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Data gallery tidak ditemukan",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Not Found"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "summary": "Delete an existing gallery image",
                "description": "Endpoint untuk menghapus gambar galeri yang sudah ada",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "ID dari gambar galeri yang akan dihapus",
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Data gallery berhasil dihapus",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "type": "boolean",
                                            "example": true
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Data gallery tidak ditemukan",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "string",
                                            "example": "Data tidak ditemukan"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
