        "/api/v1/register/magang": {
            "post": {
                "summary": "Register Magang",
                "description": "Register User Magang",
                "requestBody": {
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "examples": {
                                "user": {
                                    "description": "Register User Magang",
                                    "value": {
                                        "nama": "string",
                                        "email": "string",
                                        "no_induk": "string",
                                        "no_hp": "string",
                                        "jurusan": "string",
                                        "jenjang": "string",
                                        "instansi": "string",
                                        "surat_magang": "string",
                                        "mulai_magang": "string",
                                        "akhir_magang": "string",
                                        "alasan_magang": "string"
                                    }
                                }
                            },
                            "schema": {
                                "type": "object",
                                "required": [
                                    "nama",
                                    "email",
                                    "no_induk",
                                    "no_hp",
                                    "jurusan",
                                    "jenjang",
                                    "instansi",
                                    "surat_magang",
                                    "mulai_magang",
                                    "akhir_magang",
                                    "alasan_magang"
                                ],
                                "properties": {
                                    "nama": {
                                        "type": "string"
                                    },
                                    "no_induk": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    },
                                    "no_hp": {
                                        "type": "string"
                                    },
                                    "jurusan": {
                                        "type": "string"
                                    },
                                    "jenjang":{
                                        "type": "string"
                                    },
                                    "instansi": {
                                        "type": "string"
                                    },
                                    "surat_magang": {
                                        "type": "string",
                                        "format": "binary"
                                    },
                                    "mulai_magang":{
                                        "type": "string"
                                    },
                                    "akhir_magang":{
                                        "type": "string"
                                    },
                                    "alasan_magang":{
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success Register User",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "success": {
                                        "description": "Success Register New User",
                                        "value": {
                                            "data": {
                                                "nama": "string",
                                                "email": "string",
                                                "id": 1,
                                                "no_induk": "string",
                                                "surat_magang": "string",
                                                "jurusan": "string",
                                                "jenjang": "string",
                                                "tahun_angkatan": "string",
                                                "instansi": "string",
                                                "id_magang": 1,
                                                "updated_at": "string",
                                                "created_at": "string",
                                                "no_hp": "string",
                                                "alasan_magang": "string",
                                                "status": "pending"
                                            }
                                        }
                                    }
                                },
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "object",
                                            "properties": {
                                                "id": {
                                                    "type": "number"
                                                },
                                                "nama": {
                                                    "type": "string"
                                                },
                                                "email": {
                                                    "type": "string"
                                                },
                                                "jurusan": {
                                                    "type": "string"
                                                },
                                                "jenjang":{
                                                    "type": "string"
                                                },
                                                "tahun_angkatan": {
                                                    "type": "string"
                                                },
                                                "universitas": {
                                                    "type": "string"
                                                },
                                                "id_user_magang": {
                                                    "type": "number"
                                                },
                                                "no_telp": {
                                                    "type": "string"
                                                },
                                                "role": {
                                                    "type": "string"
                                                }
                                            }
                                        },
                                        "errors": {
                                            "type": "object"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Validation Error",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "Validation Error": {
                                        "description": "Validation Error",
                                        "value": {
                                            "email": [
                                                "The email field is required",
                                                "email containt @examples.com",
                                                "The email has already been taken"
                                            ],
                                            "password": [
                                                "The password field is required",
                                                "password min 8 characters"
                                            ],
                                            "nama": [
                                                "The nama field is required"
                                            ],
                                            "nim": [
                                                "The nim field is required"
                                            ],
                                            "no_hp": [
                                                "The no_telp field is required"
                                            ],
                                            "jurusan": [
                                                "The jurusan field is required"
                                            ],
                                            "surat_magang": [
                                                "the surat magang field is required",
                                                "the surat magang field must be pdf"
                                            ],
                                            "jenjang": [
                                                "the jenjang field is required"
                                            ],
                                            "instansi": [
                                                "the instansi field is required"
                                            ],
                                            "alasan_magang": [
                                                "the alasan magang field is required"
                                            ],
                                            "motivasi_magang": [
                                                "the motivasi_magang field is required"
                                            ],
                                            "mulai_magang": [
                                                "The mulai magang field is required"
                                            ],
                                            "akhir_magang": [
                                                "The akhir magang field is required"
                                            ]
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
