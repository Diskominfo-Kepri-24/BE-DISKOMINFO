{
    "openapi": "3.0.2",
    "info": {
        "title": "Program API",
        "description": "Program API",
        "version": "1.0"
    },
    "components": {
        "schemas": {
            "Program": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "title": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "image": {
                        "type": "string"
                    },
                    "category": {
                        "type": "string"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                }
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    },
    "security": [
        {
            "bearerAuth": []
        }
    ],
    "servers": [{ "url": "http://localhost:8000" }],
    "paths": {
        "/api/v1/program": {
            "post": {
                "summary": "Add a new program",
                "description": "Endpoint untuk menambahkan program baru",
                "requestBody": {
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "title": {
                                        "type": "string",
                                        "description": "Judul program",
                                        "example": "Program Baru"
                                    },
                                    "description": {
                                        "type": "string",
                                        "description": "Deskripsi program",
                                        "example": "Deskripsi dari program baru"
                                    },
                                    "category": {
                                        "type": "string",
                                        "description": "Kategori program",
                                        "example": "Edukasi"
                                    },
                                    "image": {
                                        "type": "string",
                                        "format": "binary",
                                        "description": "Gambar untuk program"
                                    }
                                },
                                "required": [
                                    "title",
                                    "description",
                                    "category",
                                    "image"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Data berhasil ditambahkan",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "$ref": "#/components/schemas/Program"
                                        },
                                        "status": {
                                            "type": "string",
                                            "example": "Data berhasil ditambahkan"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validasi gagal",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "The given data was invalid."
                                        },
                                        "errors": {
                                            "type": "object",
                                            "additionalProperties": {
                                                "type": "array",
                                                "items": {
                                                    "type": "string"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "get": {
                "summary": "Get programs with pagination and filters",
                "description": "Endpoint untuk mendapatkan daftar program dengan pagination dan filter",
                "parameters": [
                    {
                        "name": "page",
                        "in": "query",
                        "required": false,
                        "description": "Nomor halaman",
                        "schema": {
                            "type": "integer",
                            "default": 1
                        }
                    },
                    {
                        "name": "size",
                        "in": "query",
                        "required": false,
                        "description": "Jumlah program per halaman",
                        "schema": {
                            "type": "integer",
                            "default": 8
                        }
                    },
                    {
                        "name": "title",
                        "in": "query",
                        "required": false,
                        "description": "Filter berdasarkan judul program",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "category",
                        "in": "query",
                        "required": false,
                        "description": "Filter berdasarkan kategori program",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Daftar program berhasil diambil",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "program": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/Program"
                                            }
                                        },
                                        "pagination": {
                                            "type": "object",
                                            "properties": {
                                                "total": {
                                                    "type": "integer"
                                                },
                                                "per_page": {
                                                    "type": "integer"
                                                },
                                                "current_page": {
                                                    "type": "integer"
                                                },
                                                "last_page": {
                                                    "type": "integer"
                                                },
                                                "from": {
                                                    "type": "integer"
                                                },
                                                "to": {
                                                    "type": "integer"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/program/{id}": {
            "post": {
                "summary": "Update a program",
                "description": "Endpoint untuk mengubah data program",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "ID dari program yang akan diubah",
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "title": {
                                        "type": "string",
                                        "description": "Judul program",
                                        "example": "Program Diperbarui"
                                    },
                                    "description": {
                                        "type": "string",
                                        "description": "Deskripsi program",
                                        "example": "Deskripsi dari program yang diperbarui"
                                    },
                                    "category": {
                                        "type": "string",
                                        "description": "Kategori program",
                                        "example": "Edukasi"
                                    },
                                    "image": {
                                        "type": "string",
                                        "format": "binary",
                                        "description": "Gambar untuk program"
                                    }
                                },
                                "required": ["title", "description", "category"]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Data program berhasil diubah",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "$ref": "#/components/schemas/Program"
                                        },
                                        "status": {
                                            "type": "string",
                                            "example": "Data program berhasil diubah"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validasi gagal",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "The given data was invalid."
                                        },
                                        "errors": {
                                            "type": "object",
                                            "additionalProperties": {
                                                "type": "array",
                                                "items": {
                                                    "type": "string"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "get": {
                "summary": "Get program by ID",
                "description": "Endpoint untuk mendapatkan detail program berdasarkan ID",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "ID dari program yang akan diambil",
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Detail program berhasil diambil",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "program": {
                                            "$ref": "#/components/schemas/Program"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Program tidak ditemukan",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Not Found"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "summary": "Delete program by ID",
                "description": "Endpoint untuk menghapus data program berdasarkan ID",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "ID dari program yang akan dihapus",
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Data program berhasil dihapus",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Data program berhasil dihapus"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Program tidak ditemukan",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Not Found"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
